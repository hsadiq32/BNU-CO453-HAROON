@model ConsoleAppProject.App03.Student

@{
    ViewData["Title"] = "Edit";
}
<div class="jumbotron">
    <h3 class="display-4 text-center">Student Marks</h3>
    <h4 class="text-center" style="color:#646464">Edit</h4>
    <hr class="my-4 text-center">
    <div class="d-flex justify-content-center" style="margin-bottom:20px">
        <a class="btn btn-warning" style="margin-left:5px;width:80px" asp-action="Index">
            <img src="~/img/App03/Buttons/back.svg" alt="Analyse">
        </a>
    </div>
    <div style="background-color:white;margin: 0px 10px 0px 10px;padding:10px;border-radius:5px">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group" style="max-width:500px;margin-left:auto;margin-right:auto;margin-top:10px">
                <p class="control-label text-center">Name</p>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group" style="max-width:500px;margin-left:auto;margin-right:auto;">
                <p class="control-label text-center">Marks</p>
                <input asp-for="Marks" class="form-control" />
                <span asp-validation-for="Marks" class="text-danger"></span>
            </div>
            <div class="form-group text-center">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
