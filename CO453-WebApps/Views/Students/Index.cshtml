@model IEnumerable<ConsoleAppProject.App03.Student>
@{
    ViewData["Title"] = "Index";
}
<meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
<title>social</title>
<link rel="stylesheet" href="~/css/Product%20Sans.css" />
<link rel="stylesheet" href="~/css/styles.css" />
<div class="jumbotron">
    <h3 class="display-4 text-center">Student Marks</h3>
    <h4 class="text-center" style="color:#646464">Home</h4>
    <hr class="my-4 text-center">
    <div class="d-flex justify-content-center" style="margin-bottom:20px">
        <a class="btn btn-light" style="margin-right:5px;width:80px" asp-action="Create">
            <img src="~/img/App03/Buttons/create.svg" alt="Create">
        </a>
        <a class="btn btn-light" style="margin-left:5px;width:80px" asp-action="Analyse">
            <img src="~/img/App03/Buttons/analyse.svg" alt="Analyse">
        </a>
    </div>
    <div style="background-color:white;margin: 0px 10px 0px 10px;border-radius:5px">
        <div class="message-dashboard">
            <div class="row d-flex justify-content-around">
                @foreach (var item in Model)
                {
                    <div class="message-box">
                        <div class="box-header-wrapper">
                            <img class="box-img-user" src="assets/img/2fe8053c01e6dbc40451832248df5e4f.jpg">
                            <p class="box-text-username">@Html.DisplayFor(modelItem => item.Name)</p>
                            <div class="d-flex justify-content-around box-wrapper-icons">
                                <a asp-action="Edit" asp-route-id="@item.ID">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round" class="icon icon-tabler icon-tabler-edit box-icon">
                                        <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                                        <path d="M9 7h-3a2 2 0 0 0 -2 2v9a2 2 0 0 0 2 2h9a2 2 0 0 0 2 -2v-3"></path>
                                        <path d="M9 15h3l8.5 -8.5a1.5 1.5 0 0 0 -3 -3l-8.5 8.5v3"></path>
                                        <line x1="16" y1="5" x2="19" y2="8"></line>
                                    </svg>
                                </a>
                                <a asp-action="Details" asp-route-id="@item.ID">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round" class="icon icon-tabler icon-tabler-zoom-in box-icon">
                                        <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                                        <circle cx="10" cy="10" r="7"></circle>
                                        <line x1="7" y1="10" x2="13" y2="10"></line>
                                        <line x1="10" y1="7" x2="10" y2="13"></line>
                                        <line x1="21" y1="21" x2="15" y2="15"></line>
                                    </svg>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.ID">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round" class="icon icon-tabler icon-tabler-trash box-icon">
                                        <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                                        <line x1="4" y1="7" x2="20" y2="7"></line>
                                        <line x1="10" y1="11" x2="10" y2="17"></line>
                                        <line x1="14" y1="11" x2="14" y2="17"></line>
                                        <path d="M5 7l1 12a2 2 0 0 0 2 2h8a2 2 0 0 0 2 -2l1 -12"></path>
                                        <path d="M9 7v-3a1 1 0 0 1 1 -1h4a1 1 0 0 1 1 1v3"></path>
                                    </svg>
                                </a>
                            </div>
                        </div>
                        <div class="image-img"><img class="box-img-thumbnail" src="assets/img/2fe8053c01e6dbc40451832248df5e4f.jpg"></div>
                        <div class="image-txt"></div>
                        <div class="box-text-wrapper d-flex h-100" style="height: 100%;">
                            <p class="text-center box-text-description align-self-center" style="width: 100%;font-size: 165%;margin-bottom: 0px;padding: 3px;padding-bottom: 0px;">@Html.DisplayFor(modelItem => item.Marks), @item.GradeFinder()</p>
                        </div>
                        <div class="image-txt2"></div>
                    </div>
                }
            </div>
            </div>
        </div>
</div>
