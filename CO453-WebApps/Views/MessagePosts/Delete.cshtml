<meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
<link rel="stylesheet" href="~/css/Product%20Sans.css" />
<link rel="stylesheet" href="~/css/App04_Styles.css" />
<img src="~/App04Images/logo.svg" style=" display: block; margin-left: auto; margin-right: auto; width: 200px;margin-top: 20px;margin-bottom:20px;">
<hr />
<div class="d-flex justify-content-center" style="margin-bottom:20px">
    <a class="btn btn-warning" style="width:80px; border-radius:10px" onclick="goBack()">
        <img src="~/img/Buttons/back.svg">
    </a>
</div>
<hr />
<script>
    function goBack() {
        window.history.back();
    }
</script>
<div>
    <p class="text-center" style="color:#909090;font-size:1.2rem;font-family:'Product Sans'"><b>Delete</b></p>
    <div class="message-dashboard" style="margin: 0px 5px 0px 5px;">
        <div class="row d-flex justify-content-around">
            <div class="message-box col-md-4" style="margin-top:auto;">
                <div class="box-header-wrapper">
                    <p class="box-text-username">@Html.DisplayFor(model => model.Username)</p>
                </div>
                <div>
                    <img class="MessagePost-txt" src="~/img/App04/quote.svg" style="float:left;" />
                </div>

                <div class="box-text-wrapper d-flex h-100" style="height:100%">
                    <p class="text-center box-text-description align-self-center" style="width: 100%;font-size: 165%;margin-bottom: 0px;padding: 3px;padding-bottom: 0px;">@Html.DisplayFor(model => model.Message)</p>
                </div>
                <div>
                    <img class="MessagePost-txt" src="~/img/App04/quote.svg" style="-webkit-transform: rotate(180deg); float:right;" />
                </div>
            </div>
        </div>
    </div>
    <p class="text-center" style="color:black;font-size:1rem;font-family:'Product Sans';padding:30px">Are you sure you want to delete this?</p>
    <div class="d-flex justify-content-center">
        <form asp-action="Delete" class="justify-content-md-center">
            <input type="hidden" asp-for="PostID" />
            <input class="btn btn-danger" type="submit" value="Delete" />
        </form>
    </div>
</div>