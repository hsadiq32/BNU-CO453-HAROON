@model ConsoleAppProject.App03.Student

@{
    ViewData["Title"] = "Delete";
}

<div class="jumbotron">
    <h3 class="display-4 text-center">Student Marks</h3>
    <h4 class="text-center" style="color:#646464">Delete</h4>
    <hr class="my-4 text-center">
    <div class="d-flex justify-content-center" style="margin-bottom:20px">
        <a class="btn btn-warning" style="margin-left:5px;width:80px" asp-action="Index">
            <img src="~/img/App03/Buttons/back.svg" alt="Analyse">
        </a>
    </div>
    <div style="background-color:white;margin: 0px 10px 0px 10px;padding:10px;border-radius:5px">
        <div class="text-center" style="margin-top:20px">
            <h3 style="margin-bottom:20px">Are you sure you want to delete this?</h3>
            <h6 class="font-weight-bold">Name</h6>
            <p>@Html.DisplayFor(model => model.Name)</p>
            <h6 class="font-weight-bold">Marks</h6>
            <p>@Html.DisplayFor(model => model.Marks)</p>
            <h6 class="font-weight-bold">Grade</h6>
            <p>@Model.GradeFinder()</p>
        </div>
        <form class="d-flex justify-content-center" asp-action="Delete">
            <input type="hidden" asp-for="ID" />
            <input type="submit" value="Delete" class="btn btn-danger" />
        </form>
    </div>
</div>
